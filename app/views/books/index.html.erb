<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
    <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",book_path(book.id) %></td>
      <td><%= link_to "Edit",book_edit_path(book.id) %></td>
      <td><%= link_to "Destroy",book_destroy_path(book.id) %></td>
    <% end %>
    </tr>
  </tbody>

</table>

<h2>New Book</h2>

<%= form_with model:@book,url:'/books',method: :post,local:true do |f| %>
  <p>Title</p>
  <%= f.text_field:title %>

  <p>Body</p>
  <%= f.text_area:body %>

  <%= f.submit 'Create Book' %>
<% end %>